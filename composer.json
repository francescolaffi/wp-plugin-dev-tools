{
    "name": "francescolaffi/wp-plugin-dev-tools",
    "description": "Dev tools for wp plugins",
    "authors": [
        {
            "name": "Francesco Laffi",
            "email": "francesco.laffi@gmail.com"
        }
    ],
    "bin": ["plugin-tools"],
    "autoload": {
        "psr-0": {
            "WPPluginDevTools": "src/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://raw.github.com/francescolaffi/wp-plugin-dev-tools/master/"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "wordpress/i18n-tools": "dev-trunk",
        "symfony/console": "~2.3",
        "symfony/config": "~2.2",
        "symfony/yaml": "~2.0"
    },
    "require-dev": {
        "composer/satis": "@dev"
    },
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin"
    }
}
