{
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/francescolaffi/wp-plugin-dev-tools"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress/i18n-tools",
                "version": "dev-trunk",
                "source": {
                    "url": "http://i18n.svn.wordpress.org/tools/",
                    "type": "svn",
                    "reference": "trunk/"
                },
                "autoload": {
                    "classmap": ["./"]
                }
            }
        }
    ],
    "require-all": true,
    "output-dir": ".",
    "output-html": false
}